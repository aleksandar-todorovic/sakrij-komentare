{
  "manifest_version": 2,
  "name": "Sakrij komentare",
  "version": "0.1",

  "description": "Firefox add-on kojim možete sakriti komentare na popularnim domaćim news portalima",
  "homepage_url": "https://input.sh/sakrij-komentare",

  "icons": {
    "48": "ikone/48.png",
    "96": "ikone/96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.6yka.com/*"],
      "css": ["pravila/6yka.com.css"]
    },
    {
      "matches": ["*://ba.n1info.com/*"],
      "css": ["pravila/ba.n1info.com.css"]
    },
    {
      "matches": ["*://*.dnevnik.ba/*"],
      "css": ["pravila/dnevnik.ba.css"]
    },
    {
      "matches": ["*://*.klix.ba/*"],
      "css": ["pravila/klix.ba.css"]
    },
    {
      "matches": ["*://*.radiosarajevo.ba/*"],
      "css": ["pravila/radiosarajevo.ba.css"]
    },
    {
      "matches": ["*://*.rtvbn.com/*"],
      "css": ["pravila/rtvbn.com.css"]
    },
    {
      "matches": ["*://*.slobodna-bosna.ba/*"],
      "css": ["pravila/slobodna-bosna.ba.css"]
    },
    {
      "matches": ["*://sportsport.ba/*"],
      "css": ["pravila/sportsport.ba.css"]
    },
    {
      "matches": ["*://vijesti.ba/*"],
      "css": ["pravila/vijesti.ba.css"]
    }
  ]

}
